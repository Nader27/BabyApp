<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Add Baby"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/babyname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:hint="Baby Name"
        android:inputType="text" />

    <TextView
        android:id="@+id/babybirth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:hint="Baby Birth"
        android:inputType="text"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/babygender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:hint="Baby Gender"
        android:inputType="text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/babyadd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Baby" />

        <Button
            android:id="@+id/browse_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="Browse" />
    </LinearLayout>

    <Button
        android:id="@+id/babydelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Baby"
        android:visibility="gone" />
</LinearLayout>